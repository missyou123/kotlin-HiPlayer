<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/px20"
        android:layout_marginRight="@dimen/px20"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/play_state"
            android:layout_width="@dimen/px130"
            android:layout_height="@dimen/px130"
            android:background="@mipmap/icon_movie_play"/>
        <SeekBar
            android:id="@+id/progress_sk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="@dimen/px7"
            android:minHeight="@dimen/px7"
            android:progressDrawable="@drawable/song_progress_bg"
            android:thumb="@drawable/seek_thumb" />

        <TextView
            android:id="@+id/current_tiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/colorAppGray"
            android:textSize="@dimen/sp38" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/colorAppGray"
            android:textSize="@dimen/sp38" />
        <TextView
            android:id="@+id/durtion_tiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/colorAppGray"
            android:textSize="@dimen/sp38" />
    </LinearLayout>
    <ImageView
        android:id="@+id/loading"
        android:layout_width="@dimen/px120"
        android:layout_height="@dimen/px120"
        android:layout_centerInParent="true"
        android:src="@drawable/loading_animations"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/px40"
        android:gravity="center"
        android:background="@color/colorAppGray"/>
</merge>