<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/px7" />
            <gradient
                android:startColor="@color/colorSeekBg"
                android:centerColor="@color/colorSeekBg"
                android:endColor="@color/colorSeekBg"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/px7" />

            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/px7" />
                <gradient
                    android:startColor="@color/colorSeekProgress"
                    android:centerColor="@color/colorSeekProgress"
                    android:endColor="@color/colorSeekProgress"
                    />
            </shape>
        </clip>
    </item>

</layer-list>

