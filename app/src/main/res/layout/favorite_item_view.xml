<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px946"
    android:layout_marginLeft="@dimen/px20"
    android:layout_marginRight="@dimen/px20"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px590"
        android:layout_marginTop="@dimen/px20">
        <ImageView
            android:id="@+id/movie_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px20"
            android:layout_marginLeft="@dimen/px20"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/px35"
                android:layout_height="@dimen/px35"
                android:layout_marginRight="@dimen/px5"
                android:background="@mipmap/music_animation_icon1"/>
            <TextView
                android:id="@+id/play_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp32"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>


    </RelativeLayout>
    <TextView
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px196"
        android:maxLines="2"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp48"
        android:gravity="center_vertical"
        android:ellipsize="end"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:background="#e2e3e5">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp40"
            android:maxLines="1"
            android:ellipsize="end"/>
        <ImageView
            android:layout_width="@dimen/px60"
            android:layout_height="@dimen/px60"
            android:src="@mipmap/music_icon_bang"
            android:layout_marginLeft="@dimen/px50"/>
        <TextView
            android:id="@+id/bang_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textSize="@dimen/sp35"
            android:layout_marginLeft="@dimen/px10"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorAppGray"
            />
        <ImageView
            android:layout_width="@dimen/px60"
            android:layout_height="@dimen/px60"
            android:src="@mipmap/music_icon_message"
            android:layout_marginLeft="@dimen/px40"/>

        <TextView
            android:id="@+id/message_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textSize="@dimen/sp35"
            android:layout_marginLeft="@dimen/px10"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/px20"
            android:textColor="@color/colorAppGray"
            />

    </LinearLayout>
</LinearLayout>